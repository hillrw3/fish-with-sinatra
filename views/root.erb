<h1>Fish Homepage</h1>

<ul>
  <%@fish.each_with_index do |fish, index| %>
    <a href="/fish/<%=index%>"><li><%=fish[:name]%></li></a>
  <%end%>
</ul>

<a href="/newfish">Create a new fish</a>

<form method="get" action="/find_fish">
  <input name="search">
  <button>Search for a fish</button>
</form>